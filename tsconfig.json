{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./lib",
    "rootDir": ".",         // Cambia rootDir para incluir todo el proyecto
    "skipLibCheck": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "hubspot-sync/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
