{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./lib", // Carpeta donde se generará el código compilado
    "rootDir": "./src", // Directorio raíz de tu código fuente
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
